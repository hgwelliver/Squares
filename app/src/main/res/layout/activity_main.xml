<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/ScreenLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/background_dark"
        android:orientation="horizontal"
        android:padding="20dp">

        <Button
            android:id="@+id/randomizeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Randomize" />

        <LinearLayout
            android:id="@+id/Col1Layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:orientation="vertical"
            android:translationX="325dp">

            <ImageView
                android:id="@+id/one"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/one" />

            <ImageView
                android:id="@+id/five"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/five" />

            <ImageView
                android:id="@+id/nine"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/nine" />

            <ImageView
                android:id="@+id/thirteen"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/thirteen" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/Col2Layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:orientation="vertical"
            android:translationX="325dp">

            <ImageView
                android:id="@+id/two"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/two" />

            <ImageView
                android:id="@+id/six"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/six" />

            <ImageView
                android:id="@+id/ten"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/ten" />

            <ImageView
                android:id="@+id/fourteen"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/fourteen" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/Col3Layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:orientation="vertical"
            android:translationX="325dp">

            <ImageView
                android:id="@+id/three"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/three" />

            <ImageView
                android:id="@+id/seven"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/seven" />

            <ImageView
                android:id="@+id/eleven"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/eleven" />

            <ImageView
                android:id="@+id/fifteen"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/fifteen" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/Col4Layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:orientation="vertical"
            android:translationX="325dp">

            <ImageView
                android:id="@+id/four"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/four" />

            <ImageView
                android:id="@+id/eight"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/eight" />

            <ImageView
                android:id="@+id/twelve"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/twelve" />

            <ImageView
                android:id="@+id/blank"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/blank" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>